@using Book.App.Helpers;
@using Book.App.ViewModels;
@model NavViewModel

@{
    var isAdmin = Html.HasRole("Admin");
}

<div class="justify-content-between container-fluid d-none d-sm-block">
    <ul class="navbar-nav flex-row">
        <div>
            <div class="d-flex">
                <li class="nav-item pe-1">
                    <a class="nav-link text-light pl-0 @Html.IsActive("Home", "Index")" asp-area=""
                        asp-controller="Home" asp-action="Index">Home <span></span></a>
                </li>

                <li class="nav-item pe-1">
                    <a class="nav-link text-light @Html.IsActive("Tour", "Tours")" asp-area="" asp-controller="Tour"
                        asp-action="Tours">
                        Tours
                        <span></span>
                    </a>
                </li>
                <li class="nav-item pe-1 @Html.IsActive("Book", "Index")">
                    <a class="nav-link text-light" asp-area="" asp-controller="Book" asp-action="Index">
                        Your Book Tours
                        <span></span>
                    </a>
                </li>

                <span class="devider-y"></span>

                @if (Model.AgencyId != 0)
                {
                    <li class="nav-item px-1">
                        <a class="nav-link text-light @Html.IsActive("Tour", "AddTour")" asp-area="" asp-controller="Tour"
                            asp-route-agencyId="@Model.AgencyId" asp-action="AddTour">
                            Add Tour
                            <span></span>
                        </a>
                    </li>
                    <li class="nav-item pe-1">
                        <a class="nav-link text-light @Html.IsActive("Agency", "Details")" asp-area=""
                            asp-controller="Agency" asp-route-agencyId="@Model.AgencyId" asp-action="Details">
                            Agency
                            <span></span>
                        </a>
                    </li>
                }
                <span class="devider-y"></span>

                @if (isAdmin)
                {
                    <li class="nav-item px-1">
                        <a class="nav-link text-light @Html.IsActive("Agency", "Requests")" asp-area=""
                            asp-controller="Agency" asp-action="Requests">
                            Agency Requests
                            <span></span>
                        </a>
                    </li>
                }
            </div>
        </div>
    </ul>
</div>