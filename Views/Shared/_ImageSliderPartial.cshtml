@model TourModel


@if (Model.Images.Count > 0)
{
    <div id="slider-@Model.Id" class="carousel slide" data-ride="carousel" data-interval="4000">
        <ol class="carousel-indicators">
            @for (var i = 0; i < Model.Images.Count; i++)
            {
                <li data-target="#slider-@Model.Id" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>
        <div class="carousel-inner w-100">
            @for (var i = 0; i < Model.Images.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img class="w-100" style="height: 300px;" src="@Model.Images[i].ImageUrl" alt="@Model.Name">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#slider-@Model.Id" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#slider-@Model.Id" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
}
