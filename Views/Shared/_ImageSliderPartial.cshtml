@model ImageSliderViewModel

@if (Model.Images.Count > 0)
{
    <div id="slider-@Model.SliderId" class="carousel slide" data-ride="carousel" data-interval="4000">
        @if (Model.Images.Count > 1)
        {
            <ol class="carousel-indicators">
                @for (var i = 0; i < Model.Images.Count; i++)
                {
                    <li data-target="#slider-@Model.SliderId" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
        }

        <div class="carousel-inner w-100">
            @for (var i = 0; i < Model.Images.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="d-flex justify-content-center">
                        <img class="w-100" style="height: 300px; max-width: fit-content;" src="@Model.Images[i].ImageUrl" />
                    </div>
                </div>
            }
        </div>

        @if (Model.Images.Count > 1)
        {
            <a class="carousel-control-prev" href="#slider-@Model.SliderId" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#slider-@Model.SliderId" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        }
    </div>
}

